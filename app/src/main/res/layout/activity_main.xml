<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="人之初，性本善。性相近，习相远。苟不教，性乃迁。教之道，贵以专。昔孟母，择邻处。子不学，断机杼。窦燕山，有义方。教五子，名俱扬。养不教，父之过。教不严，师之惰。"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/textSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <VideoView
            android:id="@+id/vv_testVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_time_delay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="间隔时间"
            android:inputType="number"
            android:textSize="@dimen/textSize" />

        <Button
            android:id="@+id/btn_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_config"
            android:text="确认"
            android:textSize="@dimen/textSize" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_clear"
            android:text="清除全部数据"
            android:textSize="@dimen/textSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <Button
                android:id="@+id/btn_ttyALL_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:gravity="center"
                android:onClick="onClick_ttys_ALL"
                android:text="全部开始"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/btn_ttyS0_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:gravity="center"
                android:onClick="onClick_ttyS0"
                android:text="ttyS0 开"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/btn_ttyS1_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:gravity="center"
                android:onClick="onClick_ttyS1"
                android:text="ttyS1 开"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/btn_ttyS2_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:gravity="center"
                android:onClick="onClick_ttyS2"
                android:text="ttyS2 开"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/btn_ttyS3_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:gravity="center"
                android:onClick="onClick_ttyS3"
                android:text="ttyS3 开"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/btn_ttymxc1_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:onClick="onClick_ttymxc1"
                android:text="ttymxc1 开"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/btn_ttymxc2_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:onClick="onClick_ttymxc2"
                android:text="ttymxc2 开"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/btn_ttymxc3_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:onClick="onClick_ttymxc3"
                android:text="ttymxc3 开"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/btn_ttymxc4_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:onClick="onClick_ttymxc4"
                android:text="ttymxc4 开"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/btn_ttysWK0_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:onClick="onClick_ttysWK0"
                android:text="ttysWK0 开"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/btn_ttysWK1_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:onClick="onClick_ttysWK1"
                android:text="ttysWK1 开"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/btn_ttysWK2_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:onClick="onClick_ttysWK2"
                android:text="ttysWK2 开"
                android:textSize="@dimen/textSize" />

            <Button
                android:id="@+id/btn_ttysWK3_onff"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:onClick="onClick_ttysWK3"
                android:text="ttysWK3 开"
                android:textSize="@dimen/textSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:text="发送的字节数(byte)"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttyS0_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttyS1_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttyS2_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttyS3_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttymxc1_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttymxc2_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttymxc3_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttymxc4_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttysWK0_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttysWK1_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttysWK2_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttysWK3_send"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:text="接收的字节数(byte)"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttyS0_receive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttyS1_receive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttyS2_receive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttyS3_receive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttymxc1_receive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttymxc2_receive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttymxc3_receive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttymxc4_receive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttysWK0_receive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttysWK1_receive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttysWK2_receive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/tv_ttysWK3_receive"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height"
                android:gravity="left"
                android:hint="0"
                android:textSize="@dimen/textSize" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ping"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onClick_ping"
            android:text="开始Ping"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/tv_ping_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/holo_green_dark"
            android:gravity="center"
            android:textSize="@dimen/textSizeMin" />
    </LinearLayout>
</LinearLayout>
